<% content_for :title do %>
	<%= @game_board.title %>
<% end %>

<div class="leaderboard row">
	<div class="small-12 columns">
		<ol class="lerdehrberd streetfighter sortable">
			<% @game_board.sorted_entries.each_with_index do |entry, index| %>
		  <li class="row player"><span class="position"><%= "#{index + 1}"%></span> <h3><%= entry.display_name %></h3></li>
		<% end %>
		</ol>
		<h2>Add yourself to this board:</h2>
		<%= form_tag('/game_board_entries', method: :post) do %>
		  <%= label_tag(:display_name, "Display Name:") %>
		  <%= text_field_tag(:display_name) %>
		  <%= hidden_field_tag(:game_board_id, @game_board.id) %>
		  <%= submit_tag("Add") %>
		<% end %>
	</div>
</div>
